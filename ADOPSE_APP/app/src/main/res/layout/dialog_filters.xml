<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <!-- Type Filter -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type"
            android:textStyle="bold"
            android:textSize="16sp" />

        <RadioGroup
            android:id="@+id/type_radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/type_all"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true"
                android:text="ALL"
                android:buttonTint="@color/selector_orange" />

            <RadioButton
                android:id="@+id/type_lab"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Lab"
                android:buttonTint="@color/selector_orange" />

            <RadioButton
                android:id="@+id/type_theory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Theory"
                android:buttonTint="@color/selector_orange" />

            <RadioButton
                android:id="@+id/type_mix"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Mix"
                android:buttonTint="@color/selector_orange" />
        </RadioGroup>

        <!-- Difficulty Filter -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Difficulty"
            android:textStyle="bold"
            android:textSize="16sp" />

        <RadioGroup
            android:id="@+id/difficulty_radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/difficulty_all"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true"
                android:text="ALL"
                android:buttonTint="@color/selector_orange" />

            <RadioButton
                android:id="@+id/difficulty_easy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Easy"
                android:buttonTint="@color/selector_orange" />

            <RadioButton
                android:id="@+id/difficulty_medium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Medium"
                android:buttonTint="@color/selector_orange" />

            <RadioButton
                android:id="@+id/difficulty_hard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Hard"
                android:buttonTint="@color/selector_orange" />
        </RadioGroup>

        <!-- Ratings Filter -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ratings Filter"
            android:textStyle="bold"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/rating_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="★★★★★ 5"
                android:buttonTint="@color/selector_orange" />

            <CheckBox
                android:id="@+id/rating_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="★★★★☆ >4"
                android:buttonTint="@color/selector_orange" />

            <CheckBox
                android:id="@+id/rating_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="★★★☆☆ >3"
                android:buttonTint="@color/selector_orange" />

            <CheckBox
                android:id="@+id/rating_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="★★☆☆☆ >2"
                android:buttonTint="@color/selector_orange" />

            <CheckBox
                android:id="@+id/rating_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="★☆☆☆☆ All"
                android:buttonTint="@color/selector_orange" />
        </LinearLayout>

        <Button
            android:id="@+id/apply_filters_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Εφαρμογή Φίλτρων"
            android:backgroundTint="@color/light_orange"
            android:textColor="@color/white"/>
    </LinearLayout>
</ScrollView>
