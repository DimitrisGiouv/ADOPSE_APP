<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Price Filter -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price"
            android:textStyle="bold"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/min_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="number"
                android:text="0" />

            <EditText
                android:id="@+id/max_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="number"
                android:text="100" />
        </LinearLayout>

        <SeekBar
            android:id="@+id/price_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="50" />

        <!-- Type Filter -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type"
            android:textStyle="bold"
            android:textSize="16sp" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/type_radio_group">

            <RadioButton
                android:id="@+id/type_all"
                android:layout_width="77dp"
                android:layout_height="28dp"
                android:checked="true"
                android:text="ALL" />

            <RadioButton
                android:id="@+id/type_lab"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:text="Εργαστήριο" />

            <RadioButton
                android:id="@+id/type_theory"
                android:layout_width="111dp"
                android:layout_height="31dp"
                android:text="Θεωρία" />

            <RadioButton
                android:id="@+id/type_mix"
                android:layout_width="107dp"
                android:layout_height="33dp"
                android:text="Mix" />
        </RadioGroup>

        <!-- Difficulty Filter -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Difficulty"
            android:textStyle="bold"
            android:textSize="16sp" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/difficulty_radio_group">

            <RadioButton
                android:id="@+id/difficulty_all"
                android:layout_width="79dp"
                android:layout_height="33dp"
                android:checked="true"
                android:text="ALL" />

            <RadioButton
                android:id="@+id/difficulty_easy"
                android:layout_width="81dp"
                android:layout_height="31dp"
                android:text="Easy" />

            <RadioButton
                android:id="@+id/difficulty_medium"
                android:layout_width="wrap_content"
                android:layout_height="29dp"
                android:text="Medium" />

            <RadioButton
                android:id="@+id/difficulty_hard"
                android:layout_width="89dp"
                android:layout_height="33dp"
                android:text="Hard" />
        </RadioGroup>

        <!-- Ratings Filter -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ratings Filter"
            android:textStyle="bold"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/rating_5"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="★★★★★ 5" />

            <CheckBox
                android:id="@+id/rating_4"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:text="★★★★☆ >4" />

            <CheckBox
                android:id="@+id/rating_3"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:text="★★★☆☆ >3" />

            <CheckBox
                android:id="@+id/rating_2"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:text="★★☆☆☆ >2" />

            <CheckBox
                android:id="@+id/rating_all"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:text="★☆☆☆☆ All" />
        </LinearLayout>

        <Button
            android:id="@+id/apply_filters_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Apply Filters" />
    </LinearLayout>
</ScrollView>
