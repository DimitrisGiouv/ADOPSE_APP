<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#ECECEC" /> <!-- Change color to your desired feedback color -->
        </shape>
    </item>
    <!-- Default state -->
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Change color to your button's default color -->
        </shape>
    </item>
</selector>